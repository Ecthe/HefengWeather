<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/qingtian"
        android:orientation="vertical">


        <TextView
            android:id="@+id/cityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="left"
            android:text="上海"
            android:textColor="#fef9f3"
            android:textSize="60dp" />

        <TextView
            android:id="@+id/weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="晴天"
            android:textColor="#fef9f3"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/now_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="20°"
            android:textColor="#fef9f3"
            android:textSize="150dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/now_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:text="2016/4/20 今天"
                android:textColor="#fef9f3"
                android:textSize="23dp" />

            <TextView
                android:id="@+id/max_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_toLeftOf="@+id/min_temp"
                android:text="21"
                android:textColor="#fef9f3"
                android:textSize="23dp" />

            <TextView
                android:id="@+id/min_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingRight="30dp"
                android:text="17"
                android:textSize="23dp" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#a4bdcd" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="#ffff0000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#a4bdcd" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_daily"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#ffff0000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#a4bdcd" />

        <TextView
            android:id="@+id/weather_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:text="今天：现有阵雨。最高气温21°。今晚最低气温17°"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#a4bdcd" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/sunrise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"
                android:text="日出："
                android:textSize="20dp" />

            <TextView
                android:id="@+id/sunrise_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/sunrise"
                android:text="上午5:19"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/sunset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sunrise"
                android:layout_alignRight="@+id/sunrise"
                android:layout_marginTop="10dp"
                android:text="日落："
                android:textSize="20dp" />

            <TextView
                android:id="@+id/sunset_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/sunrise_time"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/sunrise_time"
                android:text="下午6：20"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/wind_velocity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sunset"
                android:layout_alignRight="@+id/sunrise"
                android:layout_marginTop="20dp"
                android:text="风速："
                android:textSize="20dp" />

            <TextView
                android:id="@+id/wind_velocity_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/sunrise_time"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/sunset_time"
                android:text="6m/秒"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/apparent_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/wind_velocity"
                android:layout_alignRight="@+id/sunrise"
                android:layout_marginTop="10dp"
                android:text="体感温度："
                android:textSize="20dp" />

            <TextView
                android:id="@+id/apparent_temperature_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/sunrise_time"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/wind_velocity_num"
                android:text="19°"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/precipitation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/apparent_temperature"
                android:layout_alignRight="@+id/sunrise"
                android:layout_marginTop="20dp"
                android:text="降水量："
                android:textSize="20dp" />

            <TextView
                android:id="@+id/precipitation_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/sunrise_time"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/apparent_temperature_num"
                android:text="0.8厘米"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/barometric_pressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/precipitation"
                android:layout_alignRight="@+id/sunrise"
                android:layout_marginTop="10dp"
                android:text="体感温度："
                android:textSize="20dp" />

            <TextView
                android:id="@+id/barometric_pressure_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/sunrise_time"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/precipitation_num"
                android:text="1009百帕"
                android:textSize="20dp" />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>